<body>
  <%- include ('./partials/header.ejs'); %>
 
    <div class="navv">STORIES
    
      <!-- <div class="side"> -->
        <form class="favv" action="/posts/stories">
          <button class="btn btnn">ALL POSTS</button>
        </form>
      </div>
        <div class="containerr">
      <div class="stories">
        <% posts.forEach(function func(item){%> 
          <%if(item.user_id===userr.username){%>
        <div class="story " id="<%=item._id%>">
          <div class="topnav">
            <div class="user"><%=item.user%></div>

            <form
              action="/posts/jsDelete?id=<%=item._id%>&cloudinary_id=<%=item.cloudinary_id%>"
              method="post"
              class="items"
            >
              <!-- <input type="submit" value="X" /> -->
              <button class="btn">X</button>
            </form>
          </div>
          <div class="image">
            <!-- <%=item.image%> -->
            <img src="<%=item.uploaded_file%>" />
          </div>
          <div class="caption"><%=item.caption%></div>
          <div class="like">
            <form
              action="/like?id=<%=item._id%>&cloudinary_id=<%=item.cloudinary_id%>"
              class="likes"
            >
              <!-- <input
                type="submit"
                value="X"
                id="<%=item.cloudinary_id%>"
              /><%=item.likes%> -->
              <button
                id="<%=item.cloudinary_id%>"
                class="<%= item.likes>0? 'foo' : 'moo' %>"
              >
                <%=item.likes%>
              </button>
            </form>
            <!-- <i class="fa-solid fa-heart"></i><%=item.likes%> -->
          </div>
        </div>
        <%}%>
        <%})%>
